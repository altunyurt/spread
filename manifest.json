{
    "name": "Spread",
    "version": "0.1.5",
    "manifest_version": 2,

    "description": "Speed reading extension for Google Chrome",
    "background": {
        "scripts": ["js/background.js"]
    },
    "icons": {
        "48":"images/logo48.png",
        "128":"images/logo128.png"
    },

    "content_scripts": [{
        "matches": ["http://*/*","https://*/*", "file://*"],
            "js": ["js/jquery-1.8.2.min.js", "js/jquery-ui-1.9.0.custom.min.js", "js/utils.js", "js/spread.js"],
            "all_frames": true,
            "css": ["css/spread.css"],
            "run_at": "document_idle"
    }],
    "web_accessible_resources": ["images/*"],
    "commands": {
        "open-speed-reader": {
            "suggested_key": {
                "default": "Alt+Shift+S",
                "mac": "Option+Shift+S"
            },
            "description": "Open speed reader"
        }
    },
    "options_page": "options.html",
    "permissions": ["tabs", "contextMenus"] 
}
