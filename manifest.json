{
    "name": "Spread Speed Reading Extension",
    "version": "0.1.5.4",
    "manifest_version": 2,

    "description": "Spread Speed Reading Extension ",
    "background": {
        "scripts": ["js/background.js"]
    },
    "icons": {
        "48":"images/logo48.png",
        "128":"images/logo128.png"
    },

    "content_scripts": [{
        "matches": ["http://*/*","https://*/*", "file://*"],
            "js": ["js/jquery-1.8.2.min.js", "js/jquery-ui-1.9.0.custom.min.js",    "js/jquery.miniColors.min.js",   "js/utils.js", "js/spread.js"],
            "all_frames": true,
            "css": ["css/spread.css", "css/jquery.miniColors.css"],
            "run_at": "document_idle"
    }],

    "web_accessible_resources": ["images/*"],
    "options_page": "options.html",
    "permissions": ["tabs", "contextMenus"] 
}
