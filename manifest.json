{
  "name": "Spread",
  "version": "0.1.3.1",

  "description": "Speed reading extension for Google Chrome",
  "background_page": "background.html",
  "icons": {
    "48":"images/logo48.png",
    "128":"images/logo128.png"
  },

  "content_scripts": [{
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery-1.7.min.js", "jquery-ui-1.8.16.custom.min.js", "spread.js"],
      "all_frames": true,
      "css": ["spread.css"]
  }],
  "options_page": "options.html",
  "permissions": ["tabs", "contextMenus"] 
}
