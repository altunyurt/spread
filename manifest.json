{
  "name": "Spread",
  "version": "0.1.2.1",

  "description": "Speed reading extension for chrome",
  "background_page": "background.html",
  "icons": {
    "48":"images/logo48.png",
    "128":"images/logo128.png"
  },

  "content_scripts": [{
      "matches": ["http://*/*","https://*/*"],
      "js": ["mootools-1.2.4-core.js", "mootools-1.2.4.2-more.js", "spread.js", "mooRainbow.js"],
      "all_frames": true,
      "css": ["spread.css"]
  }],
  "options_page": "options.html",
  "permissions": ["tabs"] 
}
